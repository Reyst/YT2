<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"

    app:cardCornerRadius="@dimen/list_item_corner_radius"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_margin="@dimen/margin_layout_in_card_item"
            android:paddingTop="@dimen/text_part_vertical_padding"
            >

            <ImageView
                android:id="@+id/category_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/category_icon_size"

                tools:src="@drawable/icon2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/thumb_up_size"
                    android:layout_height="@dimen/thumb_up_size"
                    android:layout_weight="1"
                    android:src="@drawable/ic_thumb_up_black_18dp"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:id="@+id/likes_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    tools:text="1"

                    android:layout_gravity="bottom"

                    android:layout_marginRight="@dimen/margin_layout_in_card_item"
                    android:layout_marginStart="@dimen/margin_layout_in_card_item"

                    android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                    android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                    android:textSize="@dimen/main_text_size"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="@dimen/divider_thick"
            android:layout_height="match_parent"
            android:background="@color/dividerColor"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="@dimen/margin_layout_in_card_item"
            >

            <TextView

                android:id="@+id/category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="@dimen/margin_layout_in_card_item"
                android:layout_marginStart="@dimen/margin_layout_in_card_item"

                android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                android:paddingTop="@dimen/text_part_vertical_padding"
                android:paddingBottom="@dimen/text_part_vertical_padding"

                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"

                android:singleLine="true"

                tools:text="QQQQQQQQQQQQQQQQQQQQQ"

                />

            <TextView

                android:id="@+id/task_desc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@id/category_title"

                android:singleLine="true"

                android:layout_marginRight="@dimen/margin_layout_in_card_item"
                android:layout_marginStart="@dimen/margin_layout_in_card_item"

                android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                android:paddingTop="@dimen/text_part_vertical_padding"
                android:paddingBottom="@dimen/text_part_vertical_padding"

                android:textSize="@dimen/main_text_size"

                tools:text="hfbvskjvsk sjkfhbskvksn ljdnvskbgks sjvksnvks"

                 />

            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@id/task_desc"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:text="@string/days"

                android:layout_marginRight="@dimen/margin_layout_in_card_item"
                android:layout_marginStart="@dimen/margin_layout_in_card_item"

                android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"
                />

            <TextView

                android:id="@+id/amount_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:text="777"

                android:layout_below="@id/task_desc"
                android:layout_toLeftOf="@+id/tv_days"
                android:layout_toStartOf="@+id/tv_days"

                android:layout_marginRight="@dimen/margin_layout_in_card_item"
                android:layout_marginStart="@dimen/margin_layout_in_card_item"

                android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                android:textSize="@dimen/main_text_size"
                android:textStyle="bold"

                />

            <TextView

                android:id="@+id/date_created"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_below="@id/task_desc"

                android:layout_toLeftOf="@+id/amount_days"
                android:layout_toStartOf="@+id/amount_days"

                tools:text="Jan. 26, 2016"

                android:layout_marginRight="@dimen/margin_layout_in_card_item"
                android:layout_marginStart="@dimen/margin_layout_in_card_item"

                android:layout_marginEnd="@dimen/margin_layout_in_card_item"
                android:layout_marginLeft="@dimen/margin_layout_in_card_item"

                android:textSize="@dimen/main_text_size"

                android:textStyle="bold"

                />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>